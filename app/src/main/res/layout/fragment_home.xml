<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".ui.home.HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="276dp"
                android:layout_height="104dp"
                android:src="@drawable/logo_color_w"
                android:scaleType="centerCrop">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/saki"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    >

                </ImageView>

                <EditText
                    android:id="@+id/vo"
                    android:layout_width="match_parent"
                    android:layout_marginRight="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="输入vo数值"
                    android:minHeight="48dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/tml"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    >

                </ImageView>
                <EditText
                    android:id="@+id/da"
                    android:layout_width="match_parent"
                    android:layout_marginRight="40dp"
                    android:layout_height="wrap_content"
                    android:hint="输入da数值"
                    android:background="@drawable/rounded_edittext2"
                    android:minHeight="48dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ktn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    >

                </ImageView>
                <EditText
                    android:id="@+id/vi"
                    android:layout_width="match_parent"
                    android:layout_marginRight="40dp"
                    android:layout_height="wrap_content"
                    android:hint="输入vi数值"
                    android:minHeight="48dp"
                    android:background="@drawable/rounded_edittext3"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="期末默认第一名，总属性和+90"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:src="@drawable/ktn2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <TextView
                    android:id="@+id/totalproperty"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:paddingTop="20dp"
                    android:textAlignment="center"
                    android:hint="属性和">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/firework"/>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="请选择目标评分"/>
                    <Spinner
                        android:id="@+id/grade"
                        android:layout_width="150dp"
                        android:layout_height="48dp"
                        android:textAlignment="center"
                        android:entries="@array/grade"
                        android:background="@drawable/rounded_edittext4">
                    </Spinner>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/smk"/>

                <TextView
                    android:id="@+id/parameter"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:paddingTop="20dp"
                    android:textAlignment="center"
                    android:hint="预测所需分数"></TextView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:clipChildren="false"> <!-- 允许子视图超出父布局 -->


                <!-- 按钮部分，放在图片的右下方，通过 margin 来调整位置 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/putout"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="计算"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="10dp"
                    app:backgroundTint="@null"
                    app:backgroundTintMode="screen"

                    android:background="@drawable/btn1"
                    />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/asr" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clipChildren="false"> <!-- 允许子视图超出父布局 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/reset"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/btn1"
                    android:text="重置"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="10dp"
                    app:backgroundTint="@null"
                    app:backgroundTintMode="screen"
                    />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/snzhr"
                    android:layout_marginBottom="75dp"
                    />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>